@model CrudMVC.Models.Contact
@{
    ViewData["Title"] = "Editar Contacto";
}

<h1 class="text-center my-4">
   Detalle Contactos
</h1>

<div class="row">
    <div class="col">
        <div class="card border">
            <div class="card-header bg-dark text-white">
                <h3 class="mb-0">Detalle Usuarios</h3>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item">
                        <strong>Nombre</strong>@Html.DisplayFor(m=> m.Name)
                    </li>
                    <li class="list-group-item">
                        <strong>Telefono</strong>@Html.DisplayFor(m=> m.Phone)
                    </li>
                    <li class="list-group-item">
                        <strong>Email</strong>@Html.DisplayFor(m=> m.Email)
                    </li>
                    <li class="list-group-item">
                        <strong>Fecha</strong>@Html.DisplayFor(m=> m.CreateTime)
                    </li>

                </ul>
                <a asp-action="Index" class="btn btn-secondary">Regresar</a>
            </div>
        </div>
    </div>
</div>